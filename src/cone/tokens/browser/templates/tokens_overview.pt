<tal:token
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:ajax="http://namespaces.conestack.org/ajax"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="cone.tokens"
  omit-tag="True">

  <tal:contextmenu replace="structure tile('contextmenu')" />

  <div class="tokens-overview-container card mt-3"
       data-token-settings="${context.token_settings}">

    <div id="tokens-create-options" class="card-header d-flex gap-2 gap-sm-3 flex-wrap">
      <div class="form-inline add-tokens input-group input-group-sm col-xs-4 col-sm-3">
        <label for="amount" class="input-group-text" i18n:translate="amount">Amount</label>
        <input type="number"
               name="amount"
               min=0
               class="form-control form-control-sm add-tokens-amount" />
        <button name="add-tokens"
                class="btn btn-sm btn-primary input-group-text"
                i18n:translate="add_token">
          Add Tokens
        </button>
      </div>

      <div class="form-inline delete-tokens">
        <button name="delete-tokens"
                class="btn btn-sm btn-danger"
                i18n:translate="delete_token">
          Delete selected Tokens
        </button>
      </div>
    </div>

    <div id="tokens-filter-options" class="card-header d-flex gap-2 gap-sm-3 flex-wrap">

      <div class="form-inline input-group input-group-sm col-xs-4 col-sm-3">
        <label for="start" class="input-group-text" i18n:translate="start">Start</label>
        <input type="text"
               name="start"
               class="form-control form-control-sm"
               value="${context.format_date(context.start)}" />
      </div>

      <div class="form-inline input-group input-group-sm col-xs-4 col-sm-3">
        <label for="end" class="input-group-text" i18n:translate="end">End</label>
        <input type="text"
               name="end"
               class="form-control form-control-sm"
               value="${context.format_date(context.end)}" />
      </div>

      <div class="form-inline input-group input-group-sm col-xs-4 col-sm-3">
        <label for="token-size" class="input-group-text" i18n:translate="token_size">Token Size</label>
        <input type="number"
            name="token-size"
            min=0
            class="form-control form-control-sm token-button"
            value="100" />
        <span class="input-group-text">%</span>
      </div>

      <button name="filter"
                class="btn btn-sm btn-primary"
                i18n:translate="filter">
        Filter
      </button>
    </div>

    <div id="tokens-overview"
         tal:define="tokens context.tokens">
      <tal:token repeat="token tokens">
        <object class="token_qr"
                data="${context.qrcode(token.value)}"
                data-token-uid="${token.uid}"
                type="image/png"
                height="256px"
                width="256px">
        </object>
      </tal:token>
    </div>
  </div>
</tal:token>